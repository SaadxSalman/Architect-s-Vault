{
	"info": {
		"name": "Polyglot Auth & Resource Manager",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Tasks",
			"item": [
				{
					"name": "Get All Tasks",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/trpc/getTasks?batch=1",
							"host": ["{{base_url}}"],
							"path": ["trpc", "getTasks"],
							"query": [{ "key": "batch", "value": "1" }]
						}
					},
					"response": []
				},
				{
					"name": "Create Task",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Dynamic Data Mastery",
									"const randomTitle = 'Task-' + Math.random().toString(36).substring(7);",
									"pm.variables.set('randomTaskName', randomTitle);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "json",
							"json": {
								"0": { "json": { "title": "{{randomTaskName}}", "status": "pending" } }
							}
						},
						"url": {
							"raw": "{{base_url}}/trpc/createTask?batch=1",
							"host": ["{{base_url}}"],
							"path": ["trpc", "createTask"],
							"query": [{ "key": "batch", "value": "1" }]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Auth Lab (System Metrics)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Check health status', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData[0].result.data.status).to.eql('Healthy');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [{ "key": "token", "value": "postman-special-key", "type": "string" }]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/trpc/getMetrics?batch=1",
					"host": ["{{base_url}}"],
					"path": ["trpc", "getMetrics"],
					"query": [{ "key": "batch", "value": "1" }]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:4000",
			"type": "string"
		}
	]
}